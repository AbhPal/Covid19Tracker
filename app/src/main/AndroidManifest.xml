<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19tracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EachCountryActivity" />
        <activity android:name=".CountrywiseDataActivity" />
        <activity android:name=".EachDistrictDataActivity" />
        <activity android:name=".DistrictwiseDataActivity" />
        <activity android:name=".EachStateDataActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".WorldDataActivity" />
        <activity android:name=".StateWiseDataActivity" />
        <activity android:name=".MainActivity">
        </activity>
    </application>

    <uses-feature android:name="android.hardware.screen.portrait" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>